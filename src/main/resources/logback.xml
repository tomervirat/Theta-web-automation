<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the log directory (same as Constants.LOG_DIR) -->
    <property name="LOG_DIR" value="${user.dir}/state/logs" />
    <property name="LOG_FILE" value="test-execution" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - All Logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} -- %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with date in filename -->
            <fileNamePattern>${LOG_DIR}/${LOG_FILE}_%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of logs -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap of 500MB -->
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender - Error Logs Only -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/errors.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} -- %msg%n%ex{full}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/errors_%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender - Debug Logs -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/debug.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} -- %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/debug_%d{yyyy-MM-dd}_%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Logger configurations for different packages -->
    
    <!-- Crypto Framework Logs - INFO and above -->
    <logger name="com.crypto" level="INFO" additivity="true" />
    
    <!-- Config Reader Logs -->
    <logger name="config" level="INFO" additivity="true" />
    
    <!-- Selenium WebDriver Logs - WARN and above (reduce verbosity) -->
    <logger name="org.openqa.selenium" level="WARN" additivity="true" />
    
    <!-- WebDriverManager Logs - INFO and above -->
    <logger name="io.github.bonigarcia.wdm" level="INFO" additivity="true" />
    
    <!-- HTTP Client Logs - WARN (reduce verbosity) -->
    <logger name="org.apache.hc" level="WARN" additivity="true" />
    
    <!-- TestNG Logs -->
    <logger name="org.testng" level="INFO" additivity="true" />
    
    <!-- Extent Reports Logs -->
    <logger name="com.aventstack.extentreports" level="INFO" additivity="true" />

    <!-- Root Logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
        <appender-ref ref="DEBUG_FILE" />
    </root>

</configuration>
